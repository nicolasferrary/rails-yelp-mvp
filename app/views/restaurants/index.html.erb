<div class = "container">
  <h1>All the restaurants are: </h1>

  <table class ="table table-striped">

    <thead>
      <tr>
        <th>
          Name
        </th>
        <th>
          Address
        </th>
        <th>
          Category
        </th>
      </tr>
    </thead>

    <tbody>
      <%  @restaurants.each do |restaurant| %>
        <tr>
          <td>
            <%=link_to restaurant.name, restaurant_path(restaurant) %>
          </td>
          <td>
            <%= restaurant.address %>
          </td>
          <td>
            <%= restaurant.category %>
          </td>
        </tr>
      <% end %>
    </tbody>

  </table>

  <%= link_to "Add a restaurant", new_restaurant_path %>

</div>
